{
  "version": "0.0.0",
  "scripts": {
    "preinstall": "./scripts/nvm-use.sh",
    "setup": "pnpm i && pnpm audit",
    "dev": "cross-env TAILWIND_MODE=watch vite",
    "lint:styles": "stylelint --fix 'src/**/**.{css,style.js,style.ts}'",
    "lint:scripts": "eslint --fix 'src/**/**.{.js,json,jsx,scss,ts,tsx}'",
    "lint:prettier": "prettier --write 'src/**/*.{js,jsx,ts,tsx,css,md}' './index.html' './*.{js,json,md}'",
    "format": "pnpm lint:scripts && pnpm lint:prettier",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:ci": "vitest run",
    "test:coverage": "vitest run --coverage",
    "build": "tsc && cross-env TAILWIND_MODE=build vite build",
    "serve": "vite preview"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.49.0",
    "@typescript-eslint/parser": "^5.49.0",
    "@vitest/coverage-v8": "^0.33.0",
    "@vitest/ui": "^0.33.0",
    "autoprefixer": "^10.4.14",
    "cross-env": "^7.0.3",
    "eslint": "^8.33.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-simple-import-sort": "^9.0.0",
    "eslint-plugin-sort-keys-fix": "^1.1.2",
    "prettier": "^2.8.8",
    "prettier-plugin-tailwindcss": "^0.3.0",
    "stylelint": "^15.10.1",
    "stylelint-config-recommended": "^12.0.0",
    "stylelint-order": "^6.0.3",
    "tailwindcss": "^3.3.2",
    "typescript": "^5.1.6",
    "vite": "^4.3.9",
    "vitest": "^0.33.0"
  }
}
